{{#if success_msg}}
<div class="alert alert-success alert-dismissible fade show" role="alert" style="width:75%; margin-bottom: 50px;">
  {{success_msg}}
  <button type="button" class="close" data-dismiss="alert" aria-label="Close">
      <span aria-hidden="">&times;</span>
  </button>
</div>
{{/if}}


{{#if error_msg}}
<div class="alert alert-danger alert-dismissible fade show" role="alert" style="width:75%; margin-bottom: 50px;">
  {{error_msg}}
  <button type="button" class="close" data-dismiss="alert" aria-label="Close">
      <span aria-hidden="">&times;</span>
  </button>
</div>
{{/if}}
